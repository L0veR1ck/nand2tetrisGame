class UI 
{
    field int Attempts_counter; 

    constructor UI new() 
    {
        let Attempts_counter = 0;
        return this;
    }

    method void update() 
    {
        do Output.moveCursor(1,1);
        do Output.printString("Attempts: ");
        
        do Output.moveCursor(1,11);
        do Output.printInt(Attempts_counter);
        return;
    }

    method void addAttempt() 
    {
        let Attempts_counter = Attempts_counter + 1;
        return;
    }
}